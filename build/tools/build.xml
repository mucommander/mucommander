<!-- This file acts as a proxy to all other necessary          -->
<!-- buildfiles: standalone structure, common targets, tools   -->
<!-- specific targets and, if available, local configuration.  -->
<!--                                                           -->
<!-- Author: Nicolas Rinaudo                                   -->
<!-- ========================================================= -->
<project name="mucommander-ant-tools" default="compress-tools" basedir=".">
