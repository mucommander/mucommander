<!-- ========================================================= -->
<!-- Main muCommander Configuration API buildfile.             -->
<!-- This acts as a proxy to all other buildfiles.             -->
<!-- ========================================================= -->
<project name="mucommander-conf-api" default="compress-conf" basedir=".">
  <!-- Notifies other buildfiles that the Configuration API is -->
  <!-- being built in standalone mode.                         -->
  <property name="conf.standalone" value="true"/>



  <!-- = Initialisation ====================================== -->
  <!-- ======================================================= -->
  <!-- Imports the various buildfiles that configure how the   -->
  <!-- project will be compiled.                               -->
  <import file="build/common.xml"/>
  <import file="build/conf/structure.xml"/>
  <import file="local.xml" optional="true"/>
  <import file="build/conf/main.xml"/>
</project>
